<UserControl
    x:Class="H.ReactiveUI.Apps.Views.PreviewDropView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:H.ReactiveUI.Apps.ViewModels;assembly=H.ReactiveUI.Apps.Core"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="600"
    Background="Black"
    Foreground="White"
    Opacity="0.5"
    d:DataContext="{d:DesignInstance viewModels:PreviewDropViewModel}"
    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
    >
    <StackPanel
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        >
        <TextBlock
            FontSize="50"
            HorizontalAlignment="Center"
            Text="{Binding Name}"
            d:Text="Name"
            />
        <TextBlock
            FontSize="20"
            HorizontalAlignment="Center"
            Text="{Binding Content}"
            d:Text="Content"
            />
    </StackPanel>
</UserControl>
